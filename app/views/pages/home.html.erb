<!-- Banner -->
<%= render 'shared/banner' %>
<!-- Cards -->

<div class="row pt-4 d-flex justify-content-center">
<% @products.each do |product| %>
  <div class="card-trip m-4 col-md-3 m-3">
    <%= link_to product_path(product) do %>
      <%= cl_image_tag(product.photo, width: 245.5, height: 200, class: 'pt-3') %>
    <% end %>

    <div class="card-trip-infos">
      <div>
        <h2><%= link_to product.name, product_path(product), class:'btn btn-light pt-2'%></h2>
        <p class='pt-2'><%= product.description%></p>
      </div>

      <h2 class="card-trip-pricing"><%= number_to_currency(product.price, unit: "R$ ", separator: ",", delimiter: ".", precision: 2) %></h2>

      <% if product.user %>
        <!-- ADAPTAR IF-STATEMENT PARA STRING DA FOTO DO USUARIO -->
        <!-- Cortar e colar a linha de baixo no else -->
        <%= image_tag "no-profile.png", class: 'card-trip-user avatar-bordered' %>
      <% else %>
        <!-- INSIRA AQUI A IMAGE-TAG NO-PROFILE -->
      <% end %>
    </div>
  </div>
<% end %>
 </div>
