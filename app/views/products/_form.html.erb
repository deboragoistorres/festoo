<div class="container">
  <div class="justify-center">
<h2>Novo Produto</h2></div>
<div class="container m-5 p-5">
  <div class="form-group">
    <%= simple_form_for(@product) do |f| %>
    <%= f.label :name, label: "Nome" %>
    <%= f.text_field :name, class: 'form-control sm-3 mb-2' %>
  </div>
  <div>
    <%= f.label :description, label: "Descrição"  %>
    <%= f.text_area :description, class: 'form-control sm-3 mb-2' %>
  </div>
  <div>
    <%= f.label :category, label: "Categoria"  %>
    <%= f.select :category, ['festa de aniversário', 'festa infantil', 'festa corporativa'] %>
  </div>
  <div>
    <%= f.input :amount, label: "Quantidade", class: 'form-control sm-3 mb-2' %>
  </div>
  <div>
    <%= f.input :price, label: "Preço" , class: 'form-control sm-3 mb-2' %>
  </div>
  <div>
    <%= f.input :status, as: :radio_buttons, collection: [[true, 'Disponível no momento'], [false, "Indisponivel no momento"]], label_method: :second, value_method: :first %>
  </div>
  <div class="photo-upload">
    <%= f.input :photo, label: "Foto"  %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div>
    <%= f.submit 'Incluir', class: "btn btn-secondary" %>
    <%= link_to 'Voltar', products_path, class: 'btn btn-info mp-5'%>
  </div>
<% end %>
</div>
</div>
