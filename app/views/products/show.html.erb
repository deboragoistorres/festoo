<div class="container my-5">
  <div class="d-flex justify-content-around">
    <h1><%= @product.category.capitalize %></h1>
    <div>
      <%= link_to 'Back to products', products_path, class:"btn btn-secondary" %>
    </div>
  </div>
  <div class="d-flex justify-content-around">
    <div class="content-box">
      <h2 class="py-3">Produto: <%= @product.name %></h2>
      <%= cl_image_tag(@product.photo, width: 250, height: 200, crop: :thumb) %>
      <h3 class="py-3">Descrição</h3>
        <p><%= @product.description %></p>
      <h4><%= number_to_currency(@product.price, unit: "R$ ", separator: ",", delimiter: ".", precision: 2) %></h4>
      <h4><%= @product.status ? 'Disponível' : 'Indisponível' %></h4>

        <%= link_to 'Editar Produto', edit_product_url(@product.id), class: 'btn btn-secondary' %>
        <%= link_to 'Apagar Produto', product_path(@product.id),
          method: :delete,
          data: { confirm: "Você tem certeza que deseja apagar esse produto?" }, class: 'btn btn-danger' %>


    </div>
    <div class="form-box">
      <h3>Agendar Produto</h3>
      <%= render 'bookings/form', product: @product, booking: @booking %>
    </div>
  </div>

</div>
<div class="bookings-display">
  <% @product.bookings.each do |booking| %>
    <h4>Reservado para o(s) perído(s)</h4>
    <p>De: <%= booking.b_date %></p>
    <p>Até: <%= booking.e_date %></p>
  <% end %>
</div>


