
<!-- NÃO APAGAR AS LINHAS ACIMA!! -->

<div class="row mt-4 justify-content-center">
  <h1 class="title-maior"><%= @product.category.capitalize %></h1>
</div>

<div class="productView">
  <div class="row p-3 justify-content-center mt-4">
    <div class="content-box col-md-5 col-sm-12">
      <div class=" position-photo justify-content-center">
        <%= cl_image_tag(@product.photo, width: 520, height: 400, crop: :thumb, class:"photoclass") %>
        <i><h2 class="productView-title ">Produto: <%= @product.name %></h2></i>
      </div>
    </div>
      <div class="content-box-color col-md-4 col-sm-12 mb-5">
        <h3 class="productView-reservar">Agendar Produto</h3>
        <%= render 'bookings/form', product: @product, booking: @booking %>
      </div>

</div>
</div>

</div>
</div>

  <div class="container">
    <div class="col-sm-7 mx-5 botoes-alinhamento">
    <%= link_to 'Voltar para produtos', products_path, class:"btn btn-primary" %>
    <%= link_to 'Editar Produto', edit_product_url(@product.id), class:"btn btn-warning" %>
    <%= link_to 'Apagar Produto', product_path(@product.id),
          method: :delete,
          data: { confirm: "Você tem certeza que deseja apagar esse produto?" }, class:'btn btn-danger' %></h3>
    </div>
  <div class="bookings-display editar-bookins">
    <div class="row">
    <h2>Reservado no(s) perído(s):</h2>
    <p>Confira as datas indisponíveis desse produto pois já estará reservado!</p>

    <table class="table">
      <thead>
        <tr>
          <th>De:</th>
          <th>Até</th>
        </tr>
      </thead>
      <tbody>
        <% @product.bookings.each do |booking| %>
          <tr>
            <td><%= booking.b_date %></td>
            <td><%= booking.e_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
  </div>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>


<!-- <-- Tabs / Guias -->
  <div class="container">
  <div class="bloco-adminstracao">
  <div class="style">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#home">Preço</a></li>
      <li><a data-toggle="tab" href="#menu1">Descrição</a></li>
      <li><a data-toggle="tab" href="#menu2">Status do produto</a></li>
    </ul>
      <div class="tab-content m-3">
        <div id="home" class="tab-pane fade in active">
          <h3>Preço</h3>
            <p><%= number_to_currency(@product.price, unit: "R$ ", separator: ",", delimiter: ".", precision: 2) %></p>
        </div>
          <div id="menu1" class="tab-pane fade">
            <h3>Descrição</h3>
            <p><%= @product.description %></p>
          </div>
            <div id="menu2" class="tab-pane fade">
              <h3>Status</h3>
              <p><%= @product.status ? 'Disponível' : 'Indisponível' %></p>
            </div>
      </div>
  </div>
  </div>
  </div>




