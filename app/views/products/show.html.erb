<div class="row mt-4 justify-content-center">
  <h1 class="title-maior"><%= @product.category.capitalize %></h1>
</div>
      <div class="productView">
  <div class="row p-3 justify-content-center mt-4">
    <div class="content-box col-md-5 col-sm-12">
      <div class=" position-photo justify-content-center">
      <%= cl_image_tag(@product.photo, width: 520, height: 400, crop: :thumb, class:"photoclass") %>
      <i><h2 class="productView-title ">Produto: <%= @product.name %></h2></i>
      </div>
    </div>
      <div class="content-box-color col-md-4 col-sm-12 mb-5">
        <h3 class="productView-reservar">Agendar Produto</h3>
        <%= render 'bookings/form', product: @product, booking: @booking %>
      </div>

      <div class="bookings-display">
        <% @product.bookings.each do |booking| %>
          <h4>Reservado para o(s) perído(s)</h4>
          <p>De: <%= booking.b_date %></p>
          <p>Até: <%= booking.e_date %></p>
        <% end %>
      </div>
</div>
</div>
</div>
</div>

<!-- <-- Tabs / Guias -->
<div class="container">
<div class="bloco-adminstracao">
<div class="style">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Descrição</a></li>
    <li><a data-toggle="tab" href="#menu1">Preço</a></li>
    <li><a data-toggle="tab" href="#menu2">Status do produto</a></li>
    <li><a data-toggle="tab" href="#menu3">Administrar Seus Produtos</a></li>
  </ul>
    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <h3>Descrição</h3>
        <p><%= @product.description %></p>
      </div>
        <div id="menu1" class="tab-pane fade">
          <h3>Preço</h3>
          <p><%= number_to_currency(@product.price, unit: "R$ ", separator: ",", delimiter: ".", precision: 2) %></p>
        </div>
          <div id="menu2" class="tab-pane fade">
            <h3>Status</h3>
            <p><%= @product.status ? 'Disponível' : 'Indisponível' %></p>
          </div>
            <div id="menu3" class="tab-pane fade">
              <h3><%= link_to 'Voltar para produtos', products_path, class:"btn btn-link" %></h3>
              <h3><%= link_to 'Editar Produto', edit_product_url(@product.id), class:"btn btn-link" %></h3>
              <h3><%= link_to 'Apagar Produto', product_path(@product.id),
                    method: :delete,
                    data: { confirm: "Você tem certeza que deseja apagar esse produto?" }, class:'btn btn-link' %></h3>
            </div>
    </div>
</div>
</div>
</div>
