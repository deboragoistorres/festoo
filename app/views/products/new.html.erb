<div class="container m-5 p-5">
  <form>
    <div class="form-group">
      <%= simple_form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control sm-3 mb-2' %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description, class:'form-control sm-3 mb-2' %>
    </div>
    <div>
      <%= f.label :category %>
      <%= f.select :category, ['festa de aniversÃ¡rio', 'festa infantil', 'festa corporativa', 'happy-hour', 'churrasco'], class:'form-control sm-3 mb-2 pb-5' %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price, class:'form-control sm-3 mb-2' %>
    </div>
    <div>
      <%= f.label :status %>
      <%= f.collection_check_boxes :status, [[true, 'Yes'], [false, "No"]], :first, :last %>
    </div>
    <div>
      <%= f.submit %>
      <%= link_to 'Voltar para o menu', products_path, class:'btn bg-light mp-5'%>
    </div>
<% end %>
</div>
</form>
